<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B3A57"
    android:onClick="Login"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonLoginMain"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="#FF5722"
        android:onClick="Login"
        android:text="Iniciar sesiÃ³n"
        app:layout_constraintBottom_toTopOf="@+id/buttonNotas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonNotas"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#FF5722"
        android:onClick="Notas"
        android:text="Notas"
        app:layout_constraintBottom_toTopOf="@+id/buttonDiario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLoginMain" />

    <Button
        android:id="@+id/buttonDiario"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#FF5722"
        android:onClick="Diario"
        android:text="Diario"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonNotas" />


</androidx.constraintlayout.widget.ConstraintLayout>